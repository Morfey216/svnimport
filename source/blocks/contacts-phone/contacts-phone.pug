include ../svg/svg

mixin contacts-phone(mod, icon)
  div(class='contacts-phone')&attributes(attributes)
    div(class= mod ? 'contacts-phone__phones--' + mod : '').contacts-phone__phones
      a(href="tel:+375291932333" onclick="ym(65809255,'reachGoal','RB_PHONE_CLICK'); gtag('event', 'click', {'event_category': 'Phones', 'event_label': 'RB_PHONE_CLICK'}); return true;").contacts-phone__phone.contacts-phone__phone--first
        span
          +svg('phone-black')(width="12" height="14")
        span +375 29 116 88 77
      a(href="tg://resolve?domain=svnimport" onclick="ym(65809255,'reachGoal',' messengerClick'); gtag('event', 'click', {'event_category': 'Messenger', 'event_label': 'MESSENGER_CLICK'}); return true;").contacts-phone__phone.contacts-phone__phone--second
        span
          +svg('icon-telegram')(width="15" height="12")
        span +375 29 670 87 19
      if (mod === 'messenger')
        p.contacts-phone__messenger (whatsapp, telegram, viber)
