include ../svg/svg

mixin contacts-mail(mail, mod)
  div(class='contacts-mail')&attributes(attributes)
    +svg('label')(class = 'contacts-mail__icon', width='26', height='26')
    //- img(src = 'img/icons/mail-icon.png', width='31', height='31', alt='', class= mod ? 'contacts-point__icon--' + mod : '').contacts-mail__icon
    a(href = 'mailto:' + mail class= mod ? 'contacts-mail__mail--' + mod : '').contacts-mail__mail #{mail}
