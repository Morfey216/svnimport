mixin page-footer(mod)
  footer.page-footer
    div.page-footer__top
      +title('Есть план? Пиши Нам!', 'white').page-footer__title
      p.page-footer__title-description Бесплатно ответим на все ваши вопросы и воплотим ваш План в Реальность
      div.page-footer__wrapper
        div.page-footer__contacts
          h3.page-footer__contacts-title Контакты
          div.page-footer__social
            h2.visually-hidden Мы в соцсетях
            ul.page-footer__social-list
              each social in socialList
                li.page-footer__social-item
                  a(href= social.link target="_blank").page-footer__social-link
                    +svg(social.icon)(width= social.w height= social.h).page-footer__icon
                    span.visually-hidden #{social.desc}
