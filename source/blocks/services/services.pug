section.services
  div.services__chart-wrapper
    +title('График работы', 'section-decor').services__title
    img(src='img/our-services/chart.png' width="1200" height="830" alt='График работы').services__chart-img
  div.services__wrapper.container
    +title('Все Услуги', 'section-decor').services__title
    p.services__title-description Полный комплект! Как вместе, так и  раздельно!
    ul.services__list
      each service in servicesList
        li.services__item
          div.services__img-container
            img(src='img/our-services/' + service.image width="268" height="458" alt= service.alt).services__img
          div.services__more-wrapper
            h3.services__service-title!= service.title
            a(href= service.link).button.services__more-link Узнать больше
